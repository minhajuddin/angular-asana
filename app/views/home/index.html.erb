<div ng-app='ngAsana'>
  <div ng-controller='TasksCtrl'>
    <p>Showing {{tasks.length}} tasks</p>
    <ul id='tasks-list'>
      <li ng-repeat='t in tasks' ng-class='{completed: t.completed}'>
        <label>
          <input type="checkbox" ng-model='t.completed' ng-change='save(t)'>
          <span class='title'>{{t.title}}</span>
        </label>
        <ul>
          <li ng-repeat='c in t.comments'>
            {{c.text}}
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
